pragma solidity >=0.5.0;

import "./Rewards.sol";

contract User {

      /**
      * @dev Function to show a user's comulative rewards. 
      * @return A boolean that indicates if the operation was successful.
      */
      showUserTotalReward() returns (bool)

      /**
      * @dev Function to show a user's rewardswhich was earned today. 
      * @return A boolean that indicates if the operation was successful.
      */
      showTodayReward() returns(uint256)

      /**
      * @dev Function to withdraw whole rewards by a user. 
      * @return A boolean that indicates if the operation was successful.
      */
      withdrawReward() returns(bool)
}